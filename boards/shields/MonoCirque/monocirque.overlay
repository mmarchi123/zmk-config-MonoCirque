/*
 * MonoCirque - Standalone Cirque Trackpad with Edge Scroll & Pressure Speed
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "MonoCirque Trackpad";
    compatible = "zmk,generic-keyboard";

    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <1>;
        rows = <1>;
        map = <RC(0,0)>;
    };

    /* Minimal dummy kscan - required by ZMK */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        
        col-gpios = <&xiao_d 0 GPIO_ACTIVE_HIGH>;
        row-gpios = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    /* Edge scroll zones */
    right_scroll: right_scroll {
        compatible = "zmk,input-processor-transform";
        #input-processor-cells = <0>;
        
        /* Right edge (15%) becomes vertical scroll */
        x-min = <85>;
        x-max = <100>;
        
        /* Disable cursor movement, enable scroll */
        x-matrix = <0 0 0>;   /* No X movement */
        y-matrix = <0 0 -3>;  /* Y becomes vertical scroll */
        z-matrix = <0 1 0>;   /* Preserve original Y */
    };
    
    bottom_scroll: bottom_scroll {
        compatible = "zmk,input-processor-transform";
        #input-processor-cells = <0>;
        
        /* Bottom edge (15%) becomes horizontal scroll */
        y-min = <85>;
        y-max = <100>;
        
        /* Disable cursor movement, enable scroll */
        x-matrix = <0 0 3>;   /* X becomes horizontal scroll */
        y-matrix = <0 0 0>;   /* No Y movement */
        z-matrix = <1 0 0>;   /* Preserve original X */
    };

    /* Pressure-controlled speed for main area */
    feather_light: feather_light {
        compatible = "zmk,input-processor-transform";
        #input-processor-cells = <0>;
        
        /* Light touch = precision mode */
        z-min = <10>;
        z-max = <60>;
        
        /* Exclude scroll edges */
        x-min = <0>;
        x-max = <84>;  /* Exclude right edge */
        y-min = <0>;
        y-max = <84>;  /* Exclude bottom edge */
        
        /* Slow, precise movement */
        x-matrix = <1 0 0>;
        y-matrix = <0 1 0>;
    };
    
    feather_medium: feather_medium {
        compatible = "zmk,input-processor-transform";
        #input-processor-cells = <0>;
        
        /* Medium pressure = normal speed */
        z-min = <61>;
        z-max = <120>;
        
        /* Exclude scroll edges */
        x-min = <0>;
        x-max = <84>;
        y-min = <0>;
        y-max = <84>;
        
        /* Normal speed */
        x-matrix = <3 0 0>;
        y-matrix = <0 3 0>;
    };
    
    feather_firm: feather_firm {
        compatible = "zmk,input-processor-transform";
        #input-processor-cells = <0>;
        
        /* Firm pressure = fast mode */
        z-min = <121>;
        z-max = <255>;
        
        /* Exclude scroll edges */
        x-min = <0>;
        x-max = <84>;
        y-min = <0>;
        y-max = <84>;
        
        /* Fast movement */
        x-matrix = <8 0 0>;
        y-matrix = <0 8 0>;
    };

    /* Input listener with chained processors */
    trackpad_listener {
        compatible = "zmk,input-listener";
        device = <&trackpad>;
        
        /* Process in order: scroll zones first, then pressure zones */
        input-processors = <&right_scroll>, <&bottom_scroll>, 
                           <&feather_light>, <&feather_medium>, <&feather_firm>;
    };
};

/* Cirque Trackpad SPI Configuration */
&xiao_spi {
    status = "okay";
    cs-gpios = <&xiao_d 7 GPIO_ACTIVE_LOW>;
    
    trackpad: trackpad@0 {
        compatible = "cirque,pinnacle";
        reg = <0>;
        spi-max-frequency = <1000000>;
        status = "okay";
        dr-gpios = <&xiao_d 6 (GPIO_ACTIVE_HIGH)>;
        sensitivity = "4x";
        sleep;
        no-taps;
    };
};