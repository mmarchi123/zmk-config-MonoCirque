#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        
        default_layer {
            /* Layer 0: Normal cursor mode */
            bindings = <&none>;
        };
        
        scroll_layer {
            /* Layer 1: Auto-activated scroll mode */
            bindings = <&none>;
        };
    };
};